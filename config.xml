<?xml version='1.0' encoding='utf-8'?>
<widget id="com.adondeir.adic" version="1.2.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>A dónde ir</name>
    <description>
        A dónde ir es una amigable aplicación en la que localizas las promociones de cada día de la semana de restaurantes, cafés, bares y antros.
    </description>
    <author email="tessersoft@gmail.com" href="https://www.tessersoft.com">
        Adónde ir en la ciudad
    </author>
    <content src="index.html" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="orientation" value="portrait"/>
    <plugin name="cordova-plugin-splashscreen" source="npm"/>
    <plugin name="cordova-plugin-geolocation" source="npm" spec="~2.1.0" />
    <plugin name="cordova-plugin-whitelist" source="npm" spec="~1.2.1" />
    <plugin name="cordova-plugin-device"  source="npm" />
    <plugin name="cordova-plugin-network-information" source="npm" spec="~1.2.0" />
    <splash src="res/gif.gif"/>
    <!-- <splash src="res/screen/android/xxxhdpi.png"/> -->
